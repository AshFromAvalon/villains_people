<div class="banner banner-mini">
  <div class="container">
    <h1>My Orders</h1>
  </div>
</div>

<div class="container">
  <h3>Ongoing orders</h3>
  <div class="d-flex flex-wrap">
    <% @ongoing_orders.each do |order| %>
      <div class="crime-card m-3 col-12 col-md-3 d-flex flex-column justify-content-between">
          <div>
            <span class="badge badge-pill badge-dark mb-3"><%= order.crime.category %></span>
            <p class="crime-name mb-1"><strong><%= order.crime.name %></strong></p>
            <p class="text-secondary">Ordered by <%= order.crime.user.user_name %></p>
          </div>
          <div>
            <h6 class="price-tag"><strong>Price</strong></h6>
            <p class="price"><%= order.crime.price %> <%= order.crime.currency %></p>
            <% if order.done %>
              <div class='d-flex align-items-center justify-content-between'>
                <span class="badge badge-success badge-pill"><%= "done (#{order.done_date})" %></span>
                <%= link_to "pay", pay_order_path(order), method: :patch, class: "mt-2 btn btn-outline-success rounded-pill text-right", data: { confirm: "Are you sure?" }%>
              </div>
            <% elsif order.validated %>
              <div class='d-flex align-items-center justify-content-between'>
                <span class="badge badge-primary badge-pill">ongoing</span>
                <%= link_to "cancel", cancel_order_path(order), method: :patch, class: "mt-2 btn btn-outline-warning rounded-pill text-right", data: { confirm: "Are you sure?" }%>
              </div>
            <% else %>
              <div class='d-flex align-items-center justify-content-between'>
                <span class="badge badge-warning badge-pill">ordered</span>
                <%= link_to "cancel", cancel_order_path(order), method: :patch, class: "mt-2 btn btn-outline-danger rounded-pill text-right", data: { confirm: "Are you sure?" }%>
              </div>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>

    <h3>Archived orders</h3>
  <div class="d-flex flex-wrap">
    <% @archived_orders.each do |order| %>
      <div class="crime-card m-3 col-12 col-md-3 d-flex flex-column justify-content-between">
          <div>
            <span class="badge badge-pill badge-dark mb-3"><%= order.crime.category %></span>
            <p class="crime-name mb-1"><strong><%= order.crime.name %></strong></p>
            <p class="text-secondary">Ordered by <%= order.crime.user.user_name %></p>
          </div>
          <div>
            <h6 class="price-tag"><strong>Price</strong></h6>
            <p class="price"><%= order.crime.price %> <%= order.crime.currency %></p>
            <% if order.done %>
              <div class='d-flex align-items-center justify-content-between'>
                <span class="badge badge-success badge-pill"><%= "done (#{order.done_date})" %></span>
                <%= link_to "Review", new_order_review_path(order), class: "mt-2 btn btn-outline-primary rounded-pill text-right" %>
              </div>
            <% else %>
              <span class="badge badge-dark badge-pill">cancelled</span>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
