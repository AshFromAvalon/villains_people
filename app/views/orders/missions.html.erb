<div class="banner banner-mini">
  <div class="container">
    <h1>My crimes</h1>
  </div>
</div>

<div class="container pt-3">
  <div class="d-flex justify-content-between align-items-center">
  </div>

  <!-- display all missions that are AWAITING APPROVAL -->
  <div class="d-flex align-items-center">
    <h3>Crimes requests</h3>
    <span class="badge badge-info"><%= @missions_tovalidate.count %></span>
  </div>
    <div class="d-flex">
    <% if @missions_tovalidate.empty? %>
      <p>No crimes to validate</p>
    <% else %>
      <% @missions_tovalidate.each do |mission| %>
        <div class="crime-card m-3 col-12 col-md-3 d-flex flex-column justify-content-between">
          <div>
            <span class="badge badge-pill badge-dark mb-3"><%= mission.crime.category %></span>
            <p class="crime-name"><strong><%= mission.crime.name %></strong></p>
          </div>
          <div>
            <h6 class="price-tag"><strong>Price</strong></h6>
            <p class="price"><%= mission.crime.price %> <%= mission.crime.currency %></p>
            <div>
              <p class="text-right mb-0"><%= link_to "Accept crime", validate_order_path(mission), method: :patch, class:'mt-2 btn btn-outline-primary rounded-pill text-right' %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
  </ul>
  <br>

  <!-- display all missions that are TO DO -->
  <div class="d-flex align-items-center">
    <h3>To do</h3>
    <span class="badge badge-info"><%= @missions_tofinish.count %></span>
  </div>
  <ul class="list-group">
    <div class="d-flex">
      <% if @missions_tofinish.empty? %>
        <p>No crimes to finish</p>
      <% else %>
        <% @missions_tofinish.each do |mission| %>
          <div class="crime-card m-3 col-12 col-md-3 d-flex flex-column justify-content-between">
            <div>
              <span class="badge badge-pill badge-dark mb-3"><%= mission.crime.category %></span>
              <p class="crime-name"><strong><%= mission.crime.name %></strong></p>
            </div>
            <div>
              <h6 class="price-tag"><strong>Price</strong></h6>
              <p class="price"><%= mission.crime.price %> <%= mission.crime.currency %></p>
              <div>
                <p class="text-right mb-0"><%= link_to "Mark as done", done_order_path(mission), method: :patch, class:'mt-2 btn btn-outline-warning rounded-pill text-right', data: { confirm: "Are you sure?" }%></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </ul>
  <br>

  <!-- display all missions that are TO PAY -->
  <div class="d-flex align-items-center">
    <h3>Crimes awaiting payment</h3>
    <span class="badge badge-info"><%= @missions_topay.count %></span>
  </div>
  <div class="d-flex">
    <% if @missions_topay.empty? %>
      <p>No crimes awaiting payment</p>
    <% else %>
      <% @missions_topay.each do |mission| %>
        <div class="crime-card m-3 col-12 col-md-3 d-flex flex-column justify-content-between">
          <div>
            <span class="badge badge-pill badge-dark mb-3"><%= mission.crime.category %></span>
            <p class="crime-name"><strong><%= mission.crime.name %></strong></p>
            <span class="badge badge-pill badge-success mb-3"> <%= "done (#{mission.done_date})" %></span>
          </div>
          <div>
            <h6 class="price-tag"><strong>Price</strong></h6>
            <p class="price"><%= mission.crime.price %> <%= mission.crime.currency %></p>
            <div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- display all missions that are ARCHIVED -->
  <div class="d-flex align-items-center">
    <h3>Archives</h3>
  </div>
  <div class="d-flex">
    <% if @missions_archived.empty? %>
      <p>No crimes in Archives</p>
    <% else %>
      <% @missions_archived.each do |mission| %>
        <div class="crime-card m-3 col-12 col-md-3 d-flex flex-column justify-content-between">
          <div>
            <span class="badge badge-pill badge-dark mb-3"><%= mission.crime.category %></span>
            <p class="crime-name"><strong><%= mission.crime.name %></strong></p>
          <div>
            <% if mission.cancelled %>
              <span class="badge badge-pill badge-light mb-3">cancelled</span>
            <% else %>
              <span class="badge badge-pill badge-success mb-3"> <%= "done (#{mission.done_date})" %></span>
            <% end %>
          </div>
          </div>
          <div>
            <h6 class="price-tag"><strong>Price</strong></h6>
            <p class="price"><%= mission.crime.price %> <%= mission.crime.currency %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
