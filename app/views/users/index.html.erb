<div class="container">
  <div class="col-12">
    <h1 class='m-3 text-center'>Users index page</h1>
  </div>
</div>

<%= form_tag filter_index_path do %>

  <!-- with a dropdown -->
  <%#= select_tag :query, options_for_select(Crime::CATEGORIES, params[:query]) %>

  <!-- With checkboxes -->

  <% Crime::CATEGORIES.each do |crime| %>
    <%= check_box_tag crime, crime %>
    <%= h crime %>
  <% end %>
  <%= submit_tag "search" %>

<% end %>


</div>
<div class="container">
  <div class="villains-cards">
    <% @users.each do |user| %>
      <% if user.photo.attached? %>
        <a href="#" class="villain-card" style="background-image: url(<%= cl_image_path user.photo.key, height: 300, width: 400, crop: :fill %>);">
      <% else %>
        <a href="#" class="villain-card" style="background-image: url('https://i.pinimg.com/originals/9f/c2/e8/9fc2e8646f9d363edb5b746bcb77ef85.png');">
      <% end %>
        <span><%= link_to user.user_name, user_path(user) %></span>
      </a>
    <% end %>
  </div>
</div>
