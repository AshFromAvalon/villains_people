<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= cl_image_tag "https://res.cloudinary.com/dydj5k25d/image/upload/v1605628521/logo-red_qp53xp.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Find a villain", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item d-flex flex-row align-items-center ">
            <%= link_to "My orders", orders_path, class: "nav-link" %>
            <span class="badge badge-pill badge-success" ><%= current_user.orders.count %></span>
        </li>
        <li class="nav-item d-flex flex-row align-items-center ">
            <%= link_to "My crimes", missions_orders_path, class: "nav-link" %>
            <span class="badge badge-pill badge-danger" ></span>
        </li>
        <li class="nav-item dropdown">
          <!-- Display the current user photo if it has one -->
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag "https://res.cloudinary.com/dydj5k25d/image/upload/v1605627577/Profile_avatar_placeholder_large_znjuuz.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "âœš Add crime", new_user_crime_path(current_user), class: "dropdown-item" %>
            <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
